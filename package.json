{
  "name": "staked-celo",
  "version": "1.0.0",
  "description": "A liquid staking derivative for CELO",
  "repository": {
    "url": "https://github.com/celo-org/staked-celo"
  },
  "devDependencies": {
    "@celo/connect": "^1.5.2",
    "@celo/contractkit": "^1.5.2",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@^0.3.0-beta.13",
    "@nomiclabs/hardhat-waffle": "^2.0.2",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@openzeppelin/contracts": "^4.4.2",
    "@openzeppelin/contracts-upgradeable": "^4.5.2",
    "@terminal-fi/celo-devchain": "git+https://github.com/soloseng/celo-devchain#add-pre-release-v7",
    "@typechain/ethers-v5": "^9.0.0",
    "@typechain/hardhat": "^4.0.0",
    "@typechain/truffle-v5": "^3.0.0",
    "@types/chai": "^4.3.0",
    "@types/fs-extra": "^9.0.13",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.17",
    "@types/yargs": "^17.0.10",
    "chai": "^4.3.6",
    "ethereum-waffle": "^3.4.0",
    "ethereumjs-util": "^7.1.4",
    "ethers": "^5.5.4",
    "hardhat": "npm:@celo/hardhat@2.8.4",
    "hardhat-deploy": "^0.10.5",
    "husky": ">=6",
    "lint-staged": ">=10",
    "prettier": "^2.5.1",
    "prettier-plugin-solidity": "1.0.0-beta.19",
    "solhint": "^3.3.7",
    "solidity-bytes-utils": "0.0.7",
    "ts-node": "^10.5.0",
    "typechain": "^7.0.0",
    "typescript": "^4.5.5",
    "web3": "1.3.6",
    "web3-utils": "^1.3.0"
  },
  "scripts": {
    "compile": "yarn run hardhat compile",
    "test": "yarn run hardhat test",
    "test:ci": "./scripts/run-tests.ci.sh",
    "devchain": "yarn run celo-devchain --port 7545 --core v7",
    "deploy:devchain": "yarn run hardhat deploy --network local && ts-node --files ./scripts/mineBlocks.ts",
    "lint": "yarn run lint:sol && yarn run lint:ts",
    "lint:sol": "prettier --write contracts/*.sol contracts/**/*.sol && solhint **/*.sol --fix --max-warnings 0",
    "lint:ts": "prettier --write ./**/*.ts",
    "lint:ci": "yarn run lint:sol:ci && yarn run lint:ts:ci",
    "lint:sol:ci": "prettier --check contracts/*.sol contracts/**/*.sol && solhint **/*.sol --max-warnings 0",
    "lint:ts:ci": "prettier --check ./**/*.ts",
    "prepare": "husky install",
    "tarchain": "ts-node scripts/tarchain.ts"
  },
  "author": "Celo Labs Inc.",
  "license": "LGPL-3.0-only",
  "lint-staged": {
    "*.sol": "yarn lint:sol",
    "*.ts": "yarn lint:ts",
    "*.js": "prettier --write"
  }
}
